<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jakub.rockpaperscissorswars">

    <application
        android:allowBackup="true"
        android:icon="@drawable/rock"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rock"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WarriorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OptionsActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignInActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterCreationActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InfoActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".RankingActivity"></activity>
    </application>

</manifest>