<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/player_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/player_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/very_light_gray">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_rock_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="50" />

            <ImageButton
                android:id="@+id/player_rock_btn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/rock_button"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_paper_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="50" />

            <ImageButton
                android:id="@+id/player_paper_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/paper_button"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_scissors_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="50" />


            <ImageButton
                android:id="@+id/player_scissors_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/scissors_button"
                android:scaleType="fitXY" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/player_lvl_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="PLAYER_LVL"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/player_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="PLAYER_NAME"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_health" />

        <TextView
            android:id="@+id/player_health_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="VAL/VAL"
            android:layout_marginStart="5dp"/>

        <View
            android:layout_width="100dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/player_defence_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="VAL/VAL"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_defence" />
    </LinearLayout>
</LinearLayout>