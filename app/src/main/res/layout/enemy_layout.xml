<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_health" />

        <TextView
            android:id="@+id/enemy_health_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:text="VAL/VAL" />

        <View
            android:layout_width="100dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/enemy_defence_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:maxLines="1"
            android:text="VAL/VAL" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_defence" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enemy_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/enemy_lvl_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="ENEMY_LVL"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enemy_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="ENEMY_NAME"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/enemy_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/very_light_gray"
        android:gravity="center"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/enemy_rock_btn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/rock" />

            <TextView
                android:id="@+id/enemy_rock_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="50" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/enemy_paper_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/paper" />

            <TextView
                android:id="@+id/enemy_paper_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/enemy_scissors_btn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/scissors" />

            <TextView
                android:id="@+id/enemy_scissors_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="50" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>